<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <title>VMS</title>

  <!-- Local CSS (CSP-friendly) -->
  <link rel="stylesheet" href="/css/bootstrap/bootstrap.min.css">
  <link rel="stylesheet" href="/css/app.css"><!-- optional -->

  <!-- Font Awesome (use local if you block CDNs) -->
  <link rel="stylesheet" href="/css/fontawesome/css/all.min.css"><!-- or your existing FA include -->

  <!-- Fonts and icons -->
    <script src="/js/plugin/webfont/webfont.min.js"></script>
    <script type="text/javascript">
      WebFont.load({
        google: { families: ["Public Sans:300,400,500,600,700"] },
        custom: {
          families: [
            "Font Awesome 5 Solid",
            "Font Awesome 5 Regular",
            "Font Awesome 5 Brands",
            "simple-line-icons",
          ],
          urls: ["/css/fonts.min.css"],
        },
        active: function () {
          sessionStorage.fonts = true;
        },
      });
    </script>

    <link rel="stylesheet" href="/css/plugins.min.css" />
    <link rel="stylesheet" href="/css/kaiadmin.min.css" />

    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link rel="stylesheet" href="/css/demo.css" />
</head>

<%
  // Safe defaults so views without auth context (e.g., /login) don't crash
  const hasUser = typeof user !== 'undefined' && user;
  const salonFlag = typeof isSalonUser !== 'undefined' ? Boolean(isSalonUser) : false;
%>
<body>
    <div class="wrapper">
      <!-- Sidebar -->
      <div class="sidebar" data-background-color="dark">
        <div class="sidebar-logo">
          <!-- Logo Header -->
          <div class="logo-header" data-background-color="dark">
            <a href="/dashboard" class="logo">
              <img src="/img/logo.svg" alt="VMS">
            </a>
            <div class="nav-toggle">
              <button class="btn btn-toggle toggle-sidebar">
                <i class="gg-menu-right"></i>
              </button>
              <button class="btn btn-toggle sidenav-toggler">
                <i class="gg-menu-left"></i>
              </button>
            </div>
            <button class="topbar-toggler more">
              <i class="gg-more-vertical-alt"></i>
            </button>
          </div>
          <!-- End Logo Header -->
        </div>
        <div class="sidebar-wrapper scrollbar scrollbar-inner">
          <div class="sidebar-content">
            <ul class="nav nav-secondary">
                <li class="nav-item <%= startsWith('/dashboard') ? 'active' : '' %>">
                    <a href="/dashboard">
                        <i class="fas fa-home"></i>
                        <p>Dashboard</p>
                    </a>
                </li>
              <li class="nav-section">
                <span class="sidebar-mini-icon">
                  <i class="fa fa-ellipsis-h"></i>
                </span>
                <h4 class="text-section">Management</h4>
              </li>
                <% if (!salonFlag) { 
                    const salonsOpen = startsWith('/salons')
                %>
                <li class="nav-item <%= salonsOpen ? 'active' : '' %>">
                <a data-bs-toggle="collapse" href="#salon" aria-expanded="<%= salonsOpen ? 'true' : 'false' %>">
                    <i class="fa-solid fa-shop"></i>
                    <p>Salons</p>
                    <span class="caret"></span>
                </a>
                <div class="collapse <%= salonsOpen ? 'show' : '' %>" id="salon">
                    <ul class="nav nav-collapse">
                    <li class="<%= equalsPath('/salons') ? 'active' : '' %>">
                        <a href="/salons"><span class="sub-item">All salons</span></a>
                    </li>
                    <li class="<%= equalsPath('/salons/create') ? 'active' : '' %>">
                        <a href="/salons/create"><span class="sub-item">Add new</span></a>
                    </li>
                    </ul>
                </div>
                </li>
                <% } %>

                <%
                // For salon users, /vouchers has tabs; keep group open for any /vouchers path
                const vouchersOpen = startsWith('/vouchers')
                %>
                <li class="nav-item <%= vouchersOpen ? 'active' : '' %>">
                <a data-bs-toggle="collapse" href="#vouchers" aria-expanded="<%= vouchersOpen ? 'true' : 'false' %>">
                    <i class="fa-solid fa-ticket"></i>
                    <p>Vouchers</p>
                    <span class="caret"></span>
                </a>
                <div class="collapse <%= vouchersOpen ? 'show' : '' %>" id="vouchers">
                    <ul class="nav nav-collapse">
                    <li class="<%= equalsPath('/vouchers') || startsWith('/vouchers/redeemed') || startsWith('/vouchers/voided') ? 'active' : '' %>">
                        <a href="/vouchers"><span class="sub-item">All vouchers</span></a>
                    </li>

                    <% if (!salonFlag) { %>
                    <li class="<%= equalsPath('/vouchers/manage') || startsWith('/vouchers/create') ? 'active' : '' %>">
                        <a href="/vouchers/manage"><span class="sub-item">Add new</span></a>
                    </li>
                    <% } %>
                    </ul>
                </div>
                </li>

                <li class="nav-item">
                <a href="/logout">
                    <i class="fa-solid fa-right-from-bracket"></i>
                    <p>Logout</p>
                </a>
                </li>
            </ul>
          </div>
        </div>
      </div>
      <!-- End Sidebar -->
<div class="main-panel">
    <div class="main-header">
          <div class="main-header-logo">
            <!-- Logo Header -->
            <div class="logo-header" data-background-color="dark">
              <a href="/dashboard" class="logo">
                <img
                  src="/img/logos.svg"
                  alt="navbar brand"
                  class="navbar-brand"
                  height="20"
                />
              </a>
              <div class="nav-toggle">
                <button class="btn btn-toggle toggle-sidebar">
                  <i class="gg-menu-right"></i>
                </button>
                <button class="btn btn-toggle sidenav-toggler">
                  <i class="gg-menu-left"></i>
                </button>
              </div>
              <button class="topbar-toggler more">
                <i class="gg-more-vertical-alt"></i>
              </button>
            </div>
            <!-- End Logo Header -->
          </div>
          <!-- Navbar Header -->
          <nav
            class="navbar navbar-header navbar-header-transparent navbar-expand-lg border-bottom"
          >
            <div class="container-fluid">

              <ul class="navbar-nav topbar-nav ms-md-auto align-items-center">

                <li class="nav-item topbar-user dropdown hidden-caret">
                  <a
                    class="dropdown-toggle profile-pic"
                    data-bs-toggle="dropdown"
                    href="#"
                    aria-expanded="false"
                  >
                    <div class="avatar-sm">
                      <img
                        src="/img/avatar.png"
                        alt="..."
                        class="avatar-img rounded-circle"
                      />
                    </div>
                    <span class="profile-username">
                        <span class="op-7">Hi,</span>
                        <span class="fw-bold"><%= userDisplayName %></span>
                    </span>
                  </a>
                  <ul class="dropdown-menu dropdown-user animated fadeIn">
                    <div class="dropdown-user-scroll scrollbar-outer">
                      <li>
                        <div class="user-box">
                          <div class="avatar-lg">
                            <img
                              src="/img/avatar.png"
                              alt="image profile"
                              class="avatar-img rounded"
                            />
                          </div>
                          <div class="u-text">
                            <h4><%= userDisplayName %></h4>
                            <p class="text-muted"><%= userEmail %></p>
                          </div>
                        </div>
                      </li>
                      <li>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">My Profile</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/account/password">Change Password</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/logout">Logout</a>
                      </li>
                    </div>
                  </ul>
                </li>
              </ul>
            </div>
          </nav>
          <!-- End Navbar -->
        </div>

        <div class="container">
          <div class="page-inner">