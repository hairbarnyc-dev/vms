<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0"><i class="fa-solid fa-ticket"></i> Manage Vouchers</h3>
    <div>
      <a class="btn btn-secondary me-2" href="/dashboard"><i class="fa-solid fa-house"></i> Dashboard</a>
      <a class="btn btn-primary" href="/vouchers/create"><i class="fa-solid fa-plus"></i> New Voucher</a>
    </div>
  </div>

  <form class="row g-2 mb-3" method="get">
    <div class="col-md-3">
      <label class="form-label">Search</label>
      <input class="form-control" name="q" placeholder="code or title" value="<%= filters.q||'' %>">
    </div>
    <div class="col-md-2">
      <label class="form-label">Status</label>
      <select class="form-select" name="status">
        <option value="">All</option>
        <option value="AVAILABLE" <%= filters.status==='AVAILABLE'?'selected':'' %>>AVAILABLE</option>
        <option value="REDEEMED"  <%= filters.status==='REDEEMED'?'selected':'' %>>REDEEMED</option>
        <option value="VOID"      <%= filters.status==='VOID'?'selected':'' %>>VOID</option>
      </select>
    </div>
    <div class="col-md-3">
      <label class="form-label">Salon</label>
      <select class="form-select" name="salon_id">
        <option value="">All</option>
        <% salons.forEach(s => { %>
          <option value="<%= s.id %>" <%= String(filters.salon_id)===String(s.id)?'selected':'' %>><%= s.name %></option>
        <% }) %>
      </select>
    </div>
    <div class="col-md-2">
      <label class="form-label">From</label>
      <input type="date" class="form-control" name="date_from" value="<%= filters.date_from||'' %>">
    </div>
    <div class="col-md-2">
      <label class="form-label">To</label>
      <input type="date" class="form-control" name="date_to" value="<%= filters.date_to||'' %>">
    </div>
    <div class="col-12 d-flex gap-2 mt-2">
      <button class="btn btn-primary"><i class="fa-solid fa-filter"></i> Apply</button>
      <a class="btn btn-outline-secondary" href="/api/v1/reports/vouchers.csv?<%= new URLSearchParams(filters).toString() %>"><i class="fa-solid fa-file-csv"></i> Export CSV</a>
    </div>
  </form>

  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead><tr>
        <th>Code</th>
        <th>Title</th>
        <th>Salon</th>
        <th>Source</th>
        <th>Order #</th>
        <th>Value</th>
        <th>Status</th>
        <th>Created</th>
        <th>Actions</th>
      </tr></thead>
      <tbody>
        <% rows.forEach(r => { %>
          <tr>
            <td><%= r.code %></td>
            <td><%= r.title %></td>
            <td><%= r.salon_name || '-' %></td>
            <td><%= r.order_source || '-' %></td>
            <td><%= r.order_number || r.order_external_id || '-' %></td>
            <td><%= r.face_value %> <%= r.currency %></td>
            <td>
              <span class="badge bg-<%= r.status==='AVAILABLE'?'success':(r.status==='REDEEMED'?'secondary':'danger') %>">
                <%= r.status %>
              </span>
            </td>
            <td><%= new Date(r.created_at).toLocaleString() %></td>
            <td class="text-nowrap">
              <button class="btn btn-sm btn-success js-open-redeem"
                      data-code="<%= r.code %>" data-title="<%= r.title %>">
                <i class="fa-solid fa-check"></i>
              </button>
              <a class="btn btn-sm btn-outline-primary" href="/vouchers/<%= r.id %>/edit"><i class="fa-solid fa-pen"></i></a>
              <form method="post" action="/vouchers/<%= r.id %>/delete" style="display:inline" onsubmit="return confirm('Delete this voucher?')">
                <button class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-trash"></i></button>
              </form>
            </td>
          </tr>
        <% }) %>
        <% if (!rows.length) { %>
          <tr><td colspan="9" class="text-center text-muted">No vouchers found.</td></tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
<div class="modal fade" id="redeemModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <form class="modal-content" method="post" action="/vouchers/action/redeem">
      <div class="modal-header">
        <h5 class="modal-title"><i class="fa-solid fa-check"></i> Redeem Voucher</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="mb-2">
          <label class="form-label">Voucher Code</label>
          <input name="code" class="form-control" id="redeemCode" readonly>
        </div>
        <div class="mb-0">
          <label class="form-label">Notes (optional)</label>
          <textarea name="notes" class="form-control" rows="2" placeholder="Add any notes..."></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-success"><i class="fa-solid fa-check"></i> Confirm Redeem</button>
      </div>
    </form>
  </div>
</div>
<script src="/vendor/bootstrap/bootstrap.bundle.min.js" defer></script>
<script src="/js/vouchers.js" defer></script>
<%- include('../partials/foot') %>
